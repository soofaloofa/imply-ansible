druid.service=broker
druid.port={{broker.port}}

# HTTP server threads
druid.broker.http.numConnections={{broker.num_connections}}
druid.server.http.numThreads={{broker.num_server_threads}}

# Processing threads and buffers
druid.processing.numThreads={{broker.num_processing_threads}}
druid.processing.buffer.sizeBytes={{broker.processing_buffer_size}}

# Query cache
druid.broker.cache.useCache=true
druid.broker.cache.populateCache=true
druid.cache.type=local
druid.cache.sizeInBytes={{broker.cache_size}}
