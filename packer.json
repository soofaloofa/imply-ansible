{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "node_type": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "ami_name": "imply-master {{timestamp}}",
    "instance_type": "t2.micro",
    "region": "us-west-2",
    "source_ami": "ami-5189a661",
    "ssh_username": "ubuntu"
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "sudo apt-add-repository ppa:rquillo/ansible",
        "sudo /usr/bin/apt-get update",
        "sudo /usr/bin/apt-get -y install ansible"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "provision.yml",
      "extra_arguments": ["--extra-vars", "node_type={{user `node_type`}}"],
      "playbook_dir": "."
    }
  ]
}
