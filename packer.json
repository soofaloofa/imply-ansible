{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "node_type": "",
    "aws_source_ami": "",
    "aws_subnet_id": "",
    "aws_security_group_id": "",
    "aws_region": "",
    "s3_bucket": "",
    "s3_access_key": "",
    "s3_secret_key": "",
    "zookeeper_ips": "",
    "mysql_ip": "",
    "mysql_dbname": "",
    "mysql_user": "",
    "mysql_password": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "ami_name": "druid-{{user `node_type`}} {{timestamp}}",
    "instance_type": "t2.micro",
    "source_ami": "{{user `aws_source_ami`}}",
    "region": "{{user `aws_region`}}",
    "subnet_id": "{{user `aws_subnet_id`}}",
    "security_group_id": "{{user `aws_security_group_id`}}",
    "ssh_username": "ubuntu",
    "associate_public_ip_address": true
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "sudo apt-add-repository ppa:rquillo/ansible",
        "sudo /usr/bin/apt-get update",
        "sudo /usr/bin/apt-get -y install ansible"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "provision.yml",
      "extra_arguments": ["--extra-vars", "'node_type={{user `node_type`}} s3_bucket={{user `s3_bucket`}} s3_access_key={{user `s3_access_key`}} s3_secret_key={{user `s3_secret_key`}} zookeeper_ips={{user `zookeeper_ips`}} mysql_ip={{user `mysql_ip`}} mysql_user={{user `mysql_user`}} mysql_password={{user `mysql_password`}}'"],
      "playbook_dir": "."
    }
  ]
}
